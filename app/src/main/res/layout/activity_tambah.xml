<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blogspot.blogsetyaaji.realmadmob.TambahActivity">

    <EditText
        android:id="@+id/txttambahnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txttambahjurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txttambahnama"
        android:hint="Jurusan"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btntambahsimpan"
        android:text="Simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txttambahjurusan"/>
</RelativeLayout>
